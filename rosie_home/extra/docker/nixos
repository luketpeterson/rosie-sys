FROM nixos/nix

# This docker image installs rosie from the URL shown below.

RUN nix-env -f https://github.com/KoviRobi/nixpkgs/archive/rosie-init-at-unstable-2020-01-11.tar.gz -iA rosie

# To get an interactive shell:
#   docker run -it rosie:nixos nix-shell -p bash
# In the interactive nix-shell, you can then use rosie, e.g.
#   rosie match all.things /etc/resolv.conf


